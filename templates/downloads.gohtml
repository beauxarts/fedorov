{{define "downloads"}}
    <ul class="downloads">
        {{$id := .Id}}
        {{range $file := .Files}}
            <li>
                {{$format := linkFormat $file}}
                <a class="link" href="/file?id={{$id}}&file={{$file}}" {{if eq $format "PDF"}}target="_blank"{{end}}>
                    <div class="format">{{$format}}</div>
                    <div class="desc">{{formatDesc $format}}</div>
                </a>
            </li>
        {{end}}
    </ul>
{{end}}