{{define "downloads"}}
    <ul class="downloads">
        {{$id := .Id}}
        {{range .Files}}
            <li>
                <a class="link" href="/file?id={{$id}}&file={{.}}">
                    {{$format := linkFormat .}}
                    <div class="format">{{$format}}</div>
                    <div class="desc">{{formatDesc $format}}</div>
                </a>
            </li>
        {{end}}
    </ul>
{{end}}