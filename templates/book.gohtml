{{define "book"}}
    <section id="book" data-id="{{.Id}}">

        <div class="cover-image">
            <img src="/cover?id={{.Id}}"/>
        </div>

        <div class="book-details">

            <h1 class="title">{{.Title}}</h1>
            <div class="labels">
                <a class="type {{.Type}}" href="/search?book-type={{.Type}}">{{.Type}}</a></div>

            <section class="text-properties">
                {{template "book-properties" .}}
            </section>

            {{template "book-sections" .}}

        </div>

        </section>
{{end}}